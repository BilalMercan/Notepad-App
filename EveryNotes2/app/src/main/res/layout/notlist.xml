<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#d3e0ea">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notbaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/notlisttitle"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/notaciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/notlisticerik"
            android:textColor="#ADADAD"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/silbtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:background="@null"
                android:src="@drawable/delete_btn_design"

                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/duzenlebtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:background="@null"
                android:src="@drawable/edit_btn_design"


                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/shareBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:background="@null"
                android:src="@drawable/share_btn_design"


                />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>